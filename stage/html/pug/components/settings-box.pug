.settings-box.hide-settings
  .toggle-settings 
    i.fa.fa-gear.fa-lg
  .settings-content.text-center
    .option-box.color-options
      h4.option-title Color Options 
      - var themes = ["green-theme", "blue-theme", "red-theme", "orange-theme", "purple-theme", "black-theme"]
      ul.list-unstyled 
        each theme in themes
          li(data-theme=theme)
    .option-box.font-options
      h4.option-title Font Options
      - var fonts = ["open", "public", "roboto", "nunito"]
      select.form-control
        each font in fonts
          option(value=font)=font + " Font"
